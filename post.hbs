 {{!< default}}
 <!--Content--> 

 <div class="container">

 <div class="row">
 
 <div class="col-md-9">
 {{#post}}
  
 <div class="article-wrapper">
	<div class="article-header-wrapper">
	<h3 class="article-header-title"><a href="{{url}}">{{{title}}}</a></h3>

		<span class="glyphicon glyphicon-time" style="color: white"></span>
		<time datetime="{{date published_at timeago="true" format="MMMM DD, YYYY"}}" itemprop="datePublished">
		  <span style="color: white">&nbsp {{date published_at format="MMMM DD, YYYY"}}</span>
		</time>

	</div>
	<div class="article-content">
	{{content}}
	<hr>
	</div>
	<div class="article-footer">
	  {{#author}}
	  <span style="text-align: right"><span class="glyphicon glyphicon-user"></span>&nbsp Published by: {{name}}</span>
	  {{/author}}  
	</div>
 
 </div>
 {{/post}}
 </div>
 
	  <!-- Tweets section -->
 
 <div class="col-md-3">
  <h2 class="main-titles">Tweets</h2>
 <div class="twitter-paperbox">

	<a class="twitter-timeline" href="https://twitter.com/BladeNode" data-widget-id="661986890531389440" data-chrome="nofooter">Tweets by @BladeNode</a>
	<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
	
 </div>
 </div>
 
 </div> <!-- Row END-->
 </div> <!-- Container END-->