 <!--Content--> 

 <div class="container">

 <div class="row">
 
 <div class="col-md-9">
  
  <!-- Welcome section -->
  
  <h2 class="main-titles">Welcome!</h2>
  <div class="paperbox">
	In this paperbox we introduce ourselves
  </div>
  
  <!-- Announcements section -->
  
  <h2 class="main-titles">Recent Announcements</h2>
  
 {{#foreach posts}} 
 <article class="article-wrapper">
	<div class="article-header-wrapper">
	<header>
	<h3 class="article-header-title"><a href="{{url}}">{{{title}}}</a></h3>

		<span class="glyphicon glyphicon-time" style="color: white"></span>
		<time datetime="{{date published_at timeago="true" format="MMMM DD, YYYY"}}" itemprop="datePublished">
		  <span style="color: white">&nbsp {{date published_at format="MMMM DD, YYYY"}}</span>
		</time>
    </header>
	</div>
	<section class="article-content">
	{{excerpt}}&hellip;
	<p class="readmore"><a href="{{url}}">Read more</a></p>
	<hr>
	</section>
	<div class="article-footer">
	  {{#author}}
	  <span style="text-align: right"><span class="glyphicon glyphicon-user"></span>&nbsp Published by: {{name}}</span>
	  {{/author}}	  
	</div>
 
 </article>
 {{/foreach}}
 
