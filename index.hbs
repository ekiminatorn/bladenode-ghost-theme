  {{!< default}}
  <!--Content--> 

 <div class="container">

 <div class="row">
 
 <div class="col-md-9">
  
  <!-- Welcome section -->
  
  <h2 class="main-titles">Welcome!</h2>
  <div class="paperbox">
	In this paperbox we introduce ourselves
  </div>
  
  <!-- Announcements section -->
  <a name="news"></a>
  <h2 class="main-titles">Recent Announcements</h2>
  
 {{#foreach posts}} 
 <article class="article-wrapper">
	<div class="article-header-wrapper">
	<header>
	<h3 class="article-header-title"><a href="{{url}}">{{{title}}}</a></h3>

		<span class="glyphicon glyphicon-time" style="color: white"></span>
		<time datetime="{{date published_at timeago="true" format="MMMM DD, YYYY"}}" itemprop="datePublished">
		  <span style="color: white">&nbsp {{date published_at format="MMMM DD, YYYY"}}</span>
		</time>
    </header>
	</div>
	<section class="article-content">
	{{excerpt}}&hellip;
	<p class="readmore"><a href="{{url}}"><strong>Read more</strong></a><span class="glyphicon glyphicon-chevron-right"></span></p>
	<hr>
	</section>
	<div class="article-footer">
	  {{#author}}
	  <span style="text-align: right"><span class="glyphicon glyphicon-user"></span>&nbsp Published by: {{name}}</span>
	  {{/author}}	  
	</div>
 
 </article>
 {{/foreach}}
 
 <center>{{pagination}}</center>
 
 </div>
 
	  <!-- Tweets section -->
 
 <div class="col-md-3">
  <h2 class="main-titles">Tweets</h2>
 <div class="twitter-paperbox">

	<a class="twitter-timeline" href="https://twitter.com/BladeNode" data-widget-id="661986890531389440" data-chrome="nofooter">Tweets by @BladeNode</a>
	<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
	
 </div>
 </div>
 
 </div> <!-- Row END-->
 </div> <!-- Container END-->
 